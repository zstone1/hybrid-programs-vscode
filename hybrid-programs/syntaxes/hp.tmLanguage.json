{
    "scopeName": "source.hybrid-program",
    "patterns": [
      { "include": "#prop"},
      { "include": "#term" }
    ],
    "repository": {
      "term": {
        "patterns":[
          {"include": "#arglist"},
          {"include": "#operator"},
          {"include": "#variable"},
          {"include": "#realLiteral"}
        ],
        "name": "term"
      },
      "prop": {
        "patterns":[
          {"include":"#logicRel"},
          {"include":"#logicOp"}
        ],
        "name": "proposition"
      },
      "logicOp": {
        "match": "&&|\\|\\||->|<->",
        "name": "symbol.logic.operator"
      },
      "logicRel": {
        "match": "==|>=|>|<=|<|!=",
        "name": "symbol.logic.relation"
      },

      "variable": { 
        "match": " *[a-zA-Z_][a-zA-Z0-9_]* *",
        "name": "variable"
      },
      "realLiteral": {
        "match": " *[0-9]*(\\.[0-9]+)? *",
        "name": "constant.numeric.real"
      },
      "operator": {
        "match": "\\+|\\*|\\-|\\/",
        "name": "symbol.arith.operator"
      },
      "comma":{
        "match": ",",
        "name": "punctuation.comma"
      },
      "arglist": {
        "begin":"\\(",
        "end": "\\)",
        "patterns" : [
          {"include": "#comma"},
          {"include": "#term"}
        ],
        "name": "arglist"
      }
    }
}